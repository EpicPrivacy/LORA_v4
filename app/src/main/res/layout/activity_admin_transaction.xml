<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFCFB"
    android:orientation="vertical"
    tools:context=".Admin.Admin_transaction">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="#EBFCFB">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

        </androidx.recyclerview.widget.RecyclerView>

    </ScrollView>

    <Spinner
        android:id="@+id/spinnerUsers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background_green1" />

    <EditText
        android:id="@+id/order_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background_green2"
        android:hint="Order Name"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/order_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background_green2"
        android:hint="Order Type"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/order_count"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background_green2"
        android:hint="Order Count"
        android:inputType="number"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/order_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background_green2"
        android:hint="Amount"
        android:inputType="number"
        android:paddingStart="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Add"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background_green1"
            android:text="Add Transaction"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnClearFields"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_green1"
            android:text="Clear Fields"
            android:textColor="#ffff" />
    </LinearLayout>


</LinearLayout>

