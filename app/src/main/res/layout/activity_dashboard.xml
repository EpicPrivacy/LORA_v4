<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFCFB"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Dashboard">


  <Button
      android:id="@+id/btn_logout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:layout_margin="30dp"
      android:background="@drawable/button_background_green2"
      android:text="Logout"
      android:textStyle="bold"
      android:textColor="#05ACA3" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bungee"
        android:text="HELLO THERE WELCOME TO LORA"
        android:textColor="#000000"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btn_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_background_green1"
        android:text="Transactions"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btn_shop_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_background_green1"
        android:text="Shop Contatct Details"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btn_update_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_background_green1"
        android:text="Track Location"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/btn_changePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_background_green1"
        android:text="Change Password"
        android:textColor="#ffff" />
  </LinearLayout>

</LinearLayout>