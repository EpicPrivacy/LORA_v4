<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_verify"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#face2f">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="FORGOT PASSWORD"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="159dp"
        android:layout_height="181dp"
        android:src="@drawable/otp"
        tools:srcCompat="@drawable/otp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="sent to your mobile number"
        android:textColor="#000000"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/forgot_otp_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="OTP"
        android:inputType="number"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/forgot_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Next"
        android:background="@drawable/button_background"
        android:textColor="#ffff"/>

    <ProgressBar
        android:id="@+id/forgot_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/custom_progress_indicator"/>

    <TextView
        android:id="@+id/forgot_btn_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Resend OTP in 30s"
        android:textSize="16sp" />


</LinearLayout>